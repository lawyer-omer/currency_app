<%= form_tag home_manage_path, data: { turbo: false }, :method => 'POST' do %>
    <div class="card" style="width: 36rem; margin:0 auto;">
        <div class="card-body">  <br>
            <%= select_tag 'fromcurrency', options_for_select([ "USD", "EUR", "TRY", "CAD", "GBP", "JPY", "QAR", "AED",  ], "USD"), class: "form-select" %> <br>
            <%= select_tag 'tocurrency', options_for_select([ "USD", "EUR", "TRY", "CAD", "GBP", "JPY", "QAR", "AED",  ], "EUR"), class: "form-select" %> <br>
            <%= submit_tag 'Search', class: "btn btn-outline-success"%> <br>
        </div>
    </div>
<% end %>

<br>

<table class="table caption-top" style="width: 36rem; margin:0 auto;">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">From</th>
      <th scope="col">To</th>
      <th scope="col">Rate</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td><%= @from_output %> </td>
      <td><%= @to_output %> </td>
      <td><%= @rate_output %> </td>
    </tr>
  </tbody>
</table>

